<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFE995">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- FULL-PAGE FLOW PANEL (lighter yellow) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardFlow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFE995"
            app:contentPadding="16dp"
            app:cardPreventCornerOverlap="true"
            app:useCompatPadding="true">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Row: tutorial | For You pill | Search pill -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgTutorial"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_info"
                        android:contentDescription="@string/cd_info_icon"/>

                    <!-- For You pill -->
                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipForYou"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/for_you"
                        android:textColor="#0B4365"
                        app:chipMinHeight="36dp"
                        app:chipStartPadding="14dp"
                        app:chipEndPadding="14dp"
                        app:chipCornerRadius="18dp"
                        app:chipBackgroundColor="#7DB5CF"
                        app:chipStrokeWidth="0dp" />

                    <!-- Search pill (compound drawable) -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/searchBubble"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="20dp"
                        app:cardBackgroundColor="#7DB5CF"
                        app:strokeWidth="0dp">

                        <TextView
                            android:id="@+id/tvSearch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:text="@string/hint_search"
                            android:textColor="#0B4365"
                            android:textSize="14sp"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            app:drawableStartCompat="@drawable/ic_search"
                            android:drawablePadding="6dp"
                            app:drawableTint="#0B4365"/>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <!-- Recommended header on even-lighter chip-style background -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardBackgroundColor="#FFE995"
                    app:strokeWidth="0dp"
                    app:contentPadding="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="40dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipRecommended"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/recommended_profiles"
                            android:textColor="#0B4365"
                            app:chipMinHeight="36dp"
                            app:chipStartPadding="14dp"
                            app:chipEndPadding="14dp"
                            app:chipCornerRadius="18dp"
                            app:chipBackgroundColor="#7DB5CF"
                            app:chipStrokeWidth="0dp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <ImageButton
                            android:id="@+id/btnPeopleMore"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@android:color/transparent"
                            android:padding="8dp"
                            android:src="@drawable/ic_chevron_right"
                            app:tint="#0B4365"
                            android:contentDescription="@string/cd_more" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Horizontal recommended profiles -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvPeople"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:paddingBottom="8dp"
                    android:clipToPadding="false"
                    android:nestedScrollingEnabled="false"
                    tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_person"
                    tools:orientation="horizontal" />

                <!-- Posts feed sits INSIDE the flowing lighter panel -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvFeed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:paddingBottom="16dp"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_post"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
