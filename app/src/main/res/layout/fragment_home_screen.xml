<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Scrollable content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/homeScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@color/pawty_yellow">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- FULL-PAGE FLOW PANEL (lighter yellow) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardFlow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                app:cardBackgroundColor="@color/pawty_light_yellow"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardPreventCornerOverlap="true"
                app:contentPadding="10dp"
                app:useCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Row: tutorial | For You pill | Search pill -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:minHeight="48dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgTutorial"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:contentDescription="@string/cd_info_icon"
                            android:src="@drawable/ic_info" />

                        <!-- For You pill -->
                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipForYou"
                            style="@style/PawtyFilterChip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="@string/for_you"
                            android:textColor="@color/pawty_text_secondary" />

                        <!-- Search pill (compound drawable) -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/searchBubble"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/pawty_teal"
                            app:cardCornerRadius="20dp"
                            app:strokeWidth="0dp">

                            <TextView
                                android:id="@+id/tvSearch"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawablePadding="6dp"
                                android:ellipsize="end"
                                android:fontFamily="@font/marcellus"
                                android:gravity="center_vertical"
                                android:paddingStart="12dp"
                                android:paddingTop="8dp"
                                android:paddingEnd="12dp"
                                android:paddingBottom="8dp"
                                android:singleLine="true"
                                android:text="@string/hint_search"
                                android:textColor="@color/pawty_text_secondary"
                                android:textSize="18sp"
                                app:drawableStartCompat="@drawable/ic_search" />
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>

                    <!-- Recommended Profiles card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardRecommended"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        app:cardBackgroundColor="@color/pawty_cream"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        app:contentPadding="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <!-- Header row: chip + arrow -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:minHeight="40dp"
                                android:orientation="horizontal">

                                <com.google.android.material.chip.Chip
                                    android:id="@+id/chipRecommended"
                                    style="@style/PawtyFilterChip"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/recommended_profiles"
                                    android:textColor="@color/pawty_text_secondary" />

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1" />

                                <ImageButton
                                    android:id="@+id/btnPeopleMore"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:background="@android:color/transparent"
                                    android:contentDescription="@string/cd_more"
                                    android:padding="4dp"
                                    android:src="@drawable/ic_chevron_right"
                                    app:tint="#0B4365" />
                            </LinearLayout>

                            <!-- Horizontal recommended profiles -->
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvPeople"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clipToPadding="false"
                                android:nestedScrollingEnabled="false"
                                android:paddingTop="8dp"
                                android:paddingBottom="4dp"
                                tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                tools:listitem="@layout/item_person"
                                tools:orientation="horizontal" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Posts feed -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvFeed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:paddingTop="4dp"
                        android:paddingBottom="16dp"
                        tools:listitem="@layout/item_post" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Floating “+” button over bottom-right -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnCreatePost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_add"
        android:contentDescription="@string/create_post"
        app:backgroundTint="@color/pawty_blue_light"
        app:tint="@color/pawty_blue_dark"
        app:useCompatPadding="true"
        app:fabSize="normal"
        app:shapeAppearanceOverlay="@style/PawtyRoundFab"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp" />

</FrameLayout>
