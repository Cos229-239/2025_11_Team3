<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Notifications"
    android:background="@color/pawty_yellow">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ViewProfileRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pawty_yellow">

        <ImageView
            android:id="@+id/logo2"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:contentDescription="@string/app_name"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_pawty_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/pawty_cream"
            android:orientation="vertical"
            android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@+id/logo2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/marcellus"
                android:gravity="center"
                android:paddingBottom="12dp"
                android:text="@string/age"
                android:textAlignment="center"
                android:textColor="@color/pawty_text_primary"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/breed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/marcellus"
                android:gravity="center"
                android:paddingBottom="12dp"
                android:text="@string/breed"
                android:textAlignment="center"
                android:textColor="@color/pawty_text_primary"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/likes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/marcellus"
                android:gravity="center"
                android:paddingBottom="12dp"
                android:text="@string/likes"
                android:textAlignment="center"
                android:textColor="@color/pawty_text_primary"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/dislikes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/marcellus"
                android:gravity="center"
                android:paddingBottom="12dp"
                android:text="@string/dislikes"
                android:textAlignment="center"
                android:textColor="@color/pawty_text_primary"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/allergies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/marcellus"
                android:gravity="center"
                android:paddingBottom="12dp"
                android:text="Allergies"
                android:textAlignment="center"
                android:textColor="@color/pawty_text_primary"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/Bio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/marcellus"
                android:gravity="center"
                android:paddingBottom="12dp"
                android:text="Bio"
                android:textAlignment="center"
                android:textColor="@color/pawty_text_primary"
                android:textSize="20sp" />

        </LinearLayout>

        <!-- Schedule playdate button under profile info -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSchedulePlaydate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="16dp"
            android:text="Schedule Playdate"
            android:textColor="@android:color/white"
            android:fontFamily="@font/marcellus"
            app:cornerRadius="24dp"
            app:icon="@drawable/ic_calendar"
            app:iconTint="@null"
            app:iconPadding="8dp"
            app:iconGravity="textStart"
            app:backgroundTint="@color/pawty_pill_blue"
            app:layout_constraintTop_toBottomOf="@id/linearLayout2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Invite to Pawty button below schedule, anchored to bottom -->
        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="24dp"
            android:text="INVITE TO PAWTY!"
            android:fontFamily="@font/marcellus"
            app:layout_constraintTop_toBottomOf="@id/btnSchedulePlaydate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
