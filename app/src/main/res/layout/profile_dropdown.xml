<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/dropdown_background"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="0dp">

    <LinearLayout
        android:id="@+id/profile_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/dropdownAvatar"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_profile"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"
            />
        <TextView
            android:id="@+id/tvProfileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/pawty_text_secondary"
            android:fontFamily="@font/marcellus"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/settingsBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:clickable="true"
        android:padding="10dp"
        android:focusable="true">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="32dp"
            android:src="@drawable/settings"
            android:layout_marginEnd="12dp"
            android:contentDescription="@string/settings"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_settings"
            android:textSize="16sp"
            android:textColor="@color/pawty_text_secondary"
            android:fontFamily="@font/marcellus"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/profile_options"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:orientation="horizontal"
        android:padding="10dp"
        android:focusable="true">

        <TextView
            android:id="@+id/profile_options_text"
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/profile_dropdown"
            android:textSize="16sp"
            android:textColor="@color/pawty_text_secondary"
            android:fontFamily="@font/marcellus"/>

        <ImageView
            android:id="@+id/profile_icon"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/add"
            android:textColor="@color/pawty_dark_blue"
            android:contentDescription="@string/dropdownIcon"/>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/hidden_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#9BD2EB"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/go_to_view_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:padding="10dp"
            android:focusable="true">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/view"
                android:textSize="14sp"
                android:textColor="@color/pawty_text_secondary"
                android:fontFamily="@font/marcellus"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/go_to_edit_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:padding="10dp"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit"
                android:textSize="14sp"
                android:textColor="@color/pawty_text_secondary"
                android:fontFamily="@font/marcellus"
                />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/pet_profile_options"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:orientation="horizontal"
        android:padding="10dp"
        android:focusable="true">

        <TextView
            android:id="@+id/pet_profile_options_text"
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:text="@string/pet_profile_dropdown"
            android:textSize="16sp"
            android:textColor="@color/pawty_text_secondary"
            android:fontFamily="@font/marcellus"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:id="@+id/pet_profile_icon"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/add"
            android:textColor="@color/pawty_text_secondary"
            android:contentDescription="@string/dropdownIcon"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/hidden_pet_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#9BD2EB"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/go_to_view_pet_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:padding="10dp"
            android:focusable="true">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/view"
                android:textSize="14sp"
                android:textColor="@color/pawty_text_secondary"
                android:fontFamily="@font/marcellus"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/go_to_edit_pet_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:padding="10dp"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit"
                android:textSize="14sp"
                android:textColor="@color/pawty_text_secondary"
                android:fontFamily="@font/marcellus"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/calendarBtn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:padding="10dp"
        android:focusable="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/calendar"
            android:textSize="16sp"
            android:textColor="@color/pawty_text_secondary"
            android:fontFamily="@font/marcellus"
            />
    </LinearLayout>

    <!-- Logout Button -->
    <LinearLayout
        android:id="@+id/logoutBtn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:padding="10dp"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/logout"
            android:textSize="16sp"
            android:textColor="@color/pawty_text_secondary"
            android:fontFamily="@font/marcellus"/>
    </LinearLayout>



</LinearLayout>