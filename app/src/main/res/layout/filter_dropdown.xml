<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dropdown_background"
    android:padding="0dp">


    <TextView
        android:id="@+id/tvFilterHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:text="Filter by:"
        android:textColor="@color/pawty_text_secondary"
        android:textSize="16sp"
        android:fontFamily="@font/marcellus" />


    <LinearLayout
        android:id="@+id/type_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/tvTypeLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Type:"
            android:textColor="@color/pawty_text_secondary"
            android:textSize="15sp"
            android:fontFamily="@font/marcellus" />

        <ImageView
            android:id="@+id/type_icon"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:src="@drawable/add"
            android:contentDescription="@string/dropdownIcon" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/hidden_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:background="@color/pawty_light_blue"
        android:visibility="gone">

        <CheckBox
            android:id="@+id/cbTypeEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event"
            android:textColor="@color/pawty_text_secondary"
            android:fontFamily="@font/marcellus"
            android:buttonTint="@color/pawty_blue_dark" />

        <CheckBox
            android:id="@+id/cbTypeProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product"
            android:textColor="@color/pawty_text_secondary"
            android:fontFamily="@font/marcellus"
            android:buttonTint="@color/pawty_blue_dark" />

        <CheckBox
            android:id="@+id/cbTypeService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Service"
            android:textColor="@color/pawty_text_secondary"
            android:fontFamily="@font/marcellus"
            android:buttonTint="@color/pawty_blue_dark" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/distance_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/tvDistanceLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Distance:"
            android:textColor="@color/pawty_text_secondary"
            android:textSize="15sp"
            android:fontFamily="@font/marcellus" />

        <ImageView
            android:id="@+id/distance_icon"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:src="@drawable/add"
            android:contentDescription="@string/dropdownIcon" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/hidden_distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp"
        android:background="@color/pawty_light_blue"
        android:visibility="gone">

        <CheckBox
            android:id="@+id/cbDist10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="within 10 miles"
            android:textColor="@color/pawty_text_secondary"
            android:fontFamily="@font/marcellus"
            android:buttonTint="@color/pawty_blue_dark" />

        <CheckBox
            android:id="@+id/cbDist25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="within 25 miles"
            android:textColor="@color/pawty_text_secondary"
            android:fontFamily="@font/marcellus"
            android:buttonTint="@color/pawty_blue_dark" />

        <CheckBox
            android:id="@+id/cbDist50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="within 50 miles"
            android:textColor="@color/pawty_text_secondary"
            android:fontFamily="@font/marcellus"
            android:buttonTint="@color/pawty_blue_dark" />

        <CheckBox
            android:id="@+id/cbDistCustom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="custom"
            android:textColor="@color/pawty_text_secondary"
            android:fontFamily="@font/marcellus"
            android:buttonTint="@color/pawty_blue_dark" />

        <EditText
            android:id="@+id/etCustomMiles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="enter miles"
            android:inputType="number"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textColor="@color/pawty_text_secondary"
            android:textColorHint="@color/pawty_text_secondary"
            android:fontFamily="@font/marcellus" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/search_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/tvSearchLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Search by:"
            android:textColor="@color/pawty_text_secondary"
            android:textSize="14sp"
            android:fontFamily="@font/marcellus" />

        <ImageView
            android:id="@+id/search_icon"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:src="@drawable/add"
            android:tint="@color/pawty_blue_dark"
            android:contentDescription="Expand search options" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/hidden_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp"
        android:background="@color/pawty_light_blue"
        android:visibility="gone">

        <CheckBox
            android:id="@+id/cbSearchLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="custom"
            android:textColor="@color/pawty_text_secondary"
            android:fontFamily="@font/marcellus"
            android:buttonTint="@color/pawty_blue_dark"/>

        <EditText
            android:id="@+id/etZipCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="zip code"
            android:inputType="number"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textColor="@color/pawty_text_secondary"
            android:textColorHint="@color/pawty_text_secondary"
            android:fontFamily="@font/marcellus" />
    </LinearLayout>
</LinearLayout>