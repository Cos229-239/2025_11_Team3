<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Notifications"
    android:background="@color/pawty_yellow"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@color/pawty_yellow">
    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="25dp"
        android:background="@drawable/round_corners_yellow"
        android:orientation="vertical"
        >

        <ImageButton
            android:id="@+id/profile_edit_pic_btn"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_profile"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Edit profile pic"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="30dp">
            
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/view_username"
                android:layout_weight="1"
                android:textColor="@color/pawty_orange"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="@string/edit_username"
                android:id="@+id/profile_edit_username"
                android:textAlignment="viewEnd"
                android:textSize="15sp"
                android:inputType="text"
                android:textColor="@color/pawty_grey"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="30dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/view_first_name"
                android:textColor="@color/pawty_orange"
                android:layout_weight="1"
                />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:id="@+id/profile_edit_firstname"
                android:text="@string/edit_first_name"
                android:textColor="@color/pawty_grey"
                android:textSize="15sp"
                android:inputType="text"
                android:textAlignment="viewEnd"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="30dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/view_last_name"
                android:textColor="@color/pawty_orange"
                android:layout_weight="1"
                />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:id="@+id/profile_edit_lastname"
                android:text="@string/edit_lastname"
                android:textColor="@color/pawty_grey"
                android:textSize="15sp"
                android:inputType="text"
                android:textAlignment="viewEnd"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="30dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/edit_bio"
                android:textColor="@color/pawty_orange"
                android:layout_weight="1"
                />

            <EditText
                android:id="@+id/profile_edit_bio"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:inputType="text"
                android:text="bio"
                android:textAlignment="viewEnd"
                android:textColor="@color/pawty_grey"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="30dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/view_email"
                android:textColor="@color/pawty_orange"
                android:layout_weight="1"
                />
            <EditText
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/profile_edit_email"
                android:text="@string/edit_email"
                android:textSize="15sp"
                android:inputType="text"
                android:textColor="@color/pawty_grey"
                android:textAlignment="viewEnd"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="30dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/view_phone_number"
                android:textColor="@color/pawty_orange"
                android:layout_weight="1"
                />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:id="@+id/profile_edit_phone_number"
                android:text="@string/edit_phone_number"
                android:textSize="15sp"
                android:textColor="@color/pawty_grey"
                android:textAlignment="viewEnd"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="30dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/view_location"
                android:textColor="@color/pawty_orange"
                android:layout_weight="1"
                />

            <EditText
                android:id="@+id/profile_edit_location"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:inputType="text"
                android:text="@string/edit_location"
                android:textAlignment="viewEnd"
                android:textColor="@color/pawty_grey"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvEditProfileTypeHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Profile Type(s)"
            android:textColor="@color/pawty_orange"
            android:textSize="16sp" />


        <LinearLayout
            android:id="@+id/layout_edit_profile_types"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="16dp">

            <CheckBox
                android:id="@+id/cbEditGoer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pawty Goer"
                android:textColor="@color/pawty_grey"
                android:buttonTint="@color/pawty_orange" />

            <CheckBox
                android:id="@+id/cbEditHost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pawty Host"
                android:textColor="@color/pawty_grey"
                android:buttonTint="@color/pawty_orange" />

            <CheckBox
                android:id="@+id/cbEditService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service Provider"
                android:textColor="@color/pawty_grey"
                android:buttonTint="@color/pawty_orange" />

            <CheckBox
                android:id="@+id/cbEditShop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shop Owner"
                android:textColor="@color/pawty_grey"
                android:buttonTint="@color/pawty_orange" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvEditIdHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Verification ID"
            android:textColor="@color/pawty_orange"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/layout_edit_id_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/zoneUploadIdFront"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <ImageButton
                    android:id="@+id/btnEditIdFront"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/round_corners"
                    android:scaleType="centerInside"
                    android:padding="8dp"
                    android:src="@android:drawable/ic_menu_camera"
                    android:contentDescription="Upload front of ID" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Front"
                    android:textColor="@color/pawty_orange"
                    android:layout_marginTop="6dp"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/zoneUploadIdBack"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <ImageButton
                    android:id="@+id/btnEditIdBack"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/round_corners"
                    android:scaleType="centerInside"
                    android:padding="8dp"
                    android:src="@android:drawable/ic_menu_camera"
                    android:contentDescription="Upload back of ID" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Back"
                    android:textColor="@color/pawty_orange"
                    android:layout_marginTop="6dp"
                    android:textSize="14sp"/>
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/go_to_pet_edit_from_profile"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:backgroundTint="@color/pawty_yellow"
            android:text="Update Your Pet Profile(s)"
            android:textColor="@color/pawty_grey"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/view_password"
                android:textColor="@color/pawty_orange"
                android:layout_weight="1"
                />

            <Button
                android:id="@+id/profile_edit_password"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:inputType="text"
                android:text="Change Password"
                android:textAlignment="viewEnd"
                android:backgroundTint="@color/pawty_yellow"
                android:textColor="@color/pawty_grey"
                android:textSize="15sp" />
        </LinearLayout>



        <Button
            android:id="@+id/edit_profile_save_changes"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="30dp"
            android:backgroundTint="@color/pawty_yellow"
           android:layout_marginTop="20dp"
            android:text="Save"
            android:textColor="@color/pt_black" />
    </LinearLayout>

    </ScrollView>




</FrameLayout>