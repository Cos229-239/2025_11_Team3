<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/pawty_yellow">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageButton
            android:id="@+id/profile_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_profile"
            android:layout_marginStart="15dp"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <ImageView
            android:id="@+id/app_logo"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="33dp"
            android:layout_toEndOf="@+id/profile_btn"
            android:src="@drawable/ic_pawty_logo" />

        <ImageButton
            android:id="@+id/notifs_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="33dp"
            android:layout_toEndOf="@+id/app_logo"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_notifications"/>
        <ImageButton
            android:id="@+id/inbox_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_inbox"
            android:layout_toEndOf="@+id/notifs_btn"
            android:layout_marginStart="33dp"
            android:background="?attr/selectableItemBackgroundBorderless" />



    </RelativeLayout>

</androidx.appcompat.widget.Toolbar>