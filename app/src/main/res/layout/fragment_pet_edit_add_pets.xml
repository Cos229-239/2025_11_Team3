<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pawty_yellow">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="15dp">



        <com.google.android.material.card.MaterialCardView
            android:id="@+id/panel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/pawty_cream"
            app:cardCornerRadius="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:fontFamily="@font/marcellus">

                <ImageButton
                    android:id="@+id/pet_edit_back_Btn"
                    android:contentDescription="@string/back_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/backarrow"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginEnd="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/pawty_pets_title"
                    android:textAlignment="center"
                    android:textColor="@color/pawty_text_secondary"
                    android:textSize="22sp"
                    android:paddingBottom="8dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:boxBackgroundMode="filled"
                    app:boxCornerRadiusTopStart="14dp"
                    app:boxCornerRadiusTopEnd="14dp"
                    app:boxCornerRadiusBottomStart="14dp"
                    app:boxCornerRadiusBottomEnd="14dp"
                    app:boxBackgroundColor="@color/pawty_teal"
                    app:boxStrokeColor="@android:color/transparent"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    android:hint="@string/hint_pet_name">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/petEditName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/pawty_text_secondary"
                        android:textColorHint="@color/pawty_text_secondary"
                        android:fontFamily="@font/marcellus"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:boxBackgroundMode="filled"
                    app:boxCornerRadiusTopStart="14dp"
                    app:boxCornerRadiusTopEnd="14dp"
                    app:boxCornerRadiusBottomStart="14dp"
                    app:boxCornerRadiusBottomEnd="14dp"
                    app:boxBackgroundColor="@color/pawty_teal"
                    app:boxStrokeColor="@android:color/transparent"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    android:hint="@string/hint_species">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/petEditSpecies"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/pawty_text_secondary"
                        android:textColorHint="@color/pawty_text_secondary"
                        android:fontFamily="@font/marcellus"/>
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:boxBackgroundMode="filled"
                    app:boxCornerRadiusTopStart="14dp"
                    app:boxCornerRadiusTopEnd="14dp"
                    app:boxCornerRadiusBottomStart="14dp"
                    app:boxCornerRadiusBottomEnd="14dp"
                    app:boxBackgroundColor="@color/pawty_teal"
                    app:boxStrokeColor="@android:color/transparent"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    android:hint="@string/hint_breed">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/petEditBreed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/pawty_text_secondary"
                        android:textColorHint="@color/pawty_text_secondary"
                        android:fontFamily="@font/marcellus"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:boxBackgroundMode="filled"
                    app:boxCornerRadiusTopStart="14dp"
                    app:boxCornerRadiusTopEnd="14dp"
                    app:boxCornerRadiusBottomStart="14dp"
                    app:boxCornerRadiusBottomEnd="14dp"
                    app:boxBackgroundColor="@color/pawty_teal"
                    app:boxStrokeColor="@android:color/transparent"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    android:hint="@string/hint_sex">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/petEditSex"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/pawty_text_secondary"
                        android:textColorHint="@color/pawty_text_secondary"
                        android:fontFamily="@font/marcellus"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/petEditTilBirthdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:boxBackgroundMode="filled"
                    app:boxCornerRadiusTopStart="14dp"
                    app:boxCornerRadiusTopEnd="14dp"
                    app:boxCornerRadiusBottomStart="14dp"
                    app:boxCornerRadiusBottomEnd="14dp"
                    app:boxBackgroundColor="@color/pawty_teal"
                    app:boxStrokeColor="@android:color/transparent"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    android:hint="@string/hint_birthdate">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/petEditBirthdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/pawty_text_secondary"
                        android:textColorHint="@color/pawty_text_secondary"
                        android:fontFamily="@font/marcellus"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:boxBackgroundMode="filled"
                    app:boxCornerRadiusTopStart="14dp"
                    app:boxCornerRadiusTopEnd="14dp"
                    app:boxCornerRadiusBottomStart="14dp"
                    app:boxCornerRadiusBottomEnd="14dp"
                    app:boxBackgroundColor="@color/pawty_teal"
                    app:boxStrokeColor="@android:color/transparent"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    android:hint="@string/hint_weight">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/petEditWeight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:textColor="@color/pawty_text_secondary"
                        android:textColorHint="@color/pawty_text_secondary"
                        android:fontFamily="@font/marcellus"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:boxBackgroundMode="filled"
                    app:boxCornerRadiusTopStart="14dp"
                    app:boxCornerRadiusTopEnd="14dp"
                    app:boxCornerRadiusBottomStart="14dp"
                    app:boxCornerRadiusBottomEnd="14dp"
                    app:boxBackgroundColor="@color/pawty_teal"
                    app:boxStrokeColor="@android:color/transparent"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    android:hint="@string/hint_likes">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/petEditLikes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/pawty_text_secondary"
                        android:textColorHint="@color/pawty_text_secondary"
                        android:fontFamily="@font/marcellus"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:boxBackgroundMode="filled"
                    app:boxCornerRadiusTopStart="14dp"
                    app:boxCornerRadiusTopEnd="14dp"
                    app:boxCornerRadiusBottomStart="14dp"
                    app:boxCornerRadiusBottomEnd="14dp"
                    app:boxBackgroundColor="@color/pawty_teal"
                    app:boxStrokeColor="@android:color/transparent"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    android:hint="@string/hint_dislikes">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/petEditDislikes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/pawty_text_secondary"
                        android:textColorHint="@color/pawty_text_secondary"
                        android:fontFamily="@font/marcellus"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_upload_pet_photo"
                    android:textColor="@color/pawty_text_secondary"
                    android:fontFamily="@font/marcellus"
                    android:textSize="14sp"
                    android:layout_marginTop="16dp" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/petEditUploadPetPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginTop="8dp"
                    app:cardBackgroundColor="@color/pawty_teal"
                    app:cardCornerRadius="14dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/petEditPhotoPreview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@android:drawable/ic_menu_camera"
                        android:contentDescription="@string/btn_upload_pet_photo" />
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/health_info_header"
                    android:textColor="@color/pawty_text_secondary"
                    android:textSize="18sp"
                    android:fontFamily="@font/marcellus"
                    android:layout_marginTop="16dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    app:boxBackgroundMode="filled"
                    app:boxCornerRadiusTopStart="14dp"
                    app:boxCornerRadiusTopEnd="14dp"
                    app:boxCornerRadiusBottomStart="14dp"
                    app:boxCornerRadiusBottomEnd="14dp"
                    app:boxBackgroundColor="@color/pawty_teal"
                    app:boxStrokeColor="@android:color/transparent"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    android:hint="@string/hint_med_conditions">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/petEditMedical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/pawty_text_secondary"
                        android:textColorHint="@color/pawty_text_secondary"
                        android:fontFamily="@font/marcellus"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:boxBackgroundMode="filled"
                    app:boxCornerRadiusTopStart="14dp"
                    app:boxCornerRadiusTopEnd="14dp"
                    app:boxCornerRadiusBottomStart="14dp"
                    app:boxCornerRadiusBottomEnd="14dp"
                    app:boxBackgroundColor="@color/pawty_teal"
                    app:boxStrokeColor="@android:color/transparent"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    android:hint="@string/hint_medications">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/petEditSpayedNeutered"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/pawty_text_secondary"
                        android:textColorHint="@color/pawty_text_secondary"
                        android:fontFamily="@font/marcellus"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:boxBackgroundMode="filled"
                    app:boxCornerRadiusTopStart="14dp"
                    app:boxCornerRadiusTopEnd="14dp"
                    app:boxCornerRadiusBottomStart="14dp"
                    app:boxCornerRadiusBottomEnd="14dp"
                    app:boxBackgroundColor="@color/pawty_teal"
                    app:boxStrokeColor="@android:color/transparent"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    android:hint="@string/hint_spayed_neutered">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/petEditMeds"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/pawty_text_secondary"
                        android:textColorHint="@color/pawty_text_secondary"
                        android:fontFamily="@font/marcellus"/>
                </com.google.android.material.textfield.TextInputLayout>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_upload_vax"
                    android:textColor="@color/pawty_text_secondary"
                    android:fontFamily="@font/marcellus"
                    android:textSize="14sp"
                    android:layout_marginTop="16dp" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/petEditUploadVax"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="8dp"
                    app:cardBackgroundColor="@color/pawty_teal"
                    app:cardCornerRadius="14dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/petEditVaxPreview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@android:drawable/ic_menu_camera"
                        android:contentDescription="@string/btn_upload_vax" />
                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/petEditAddAnother"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/add_another_pet"
                        android:textAllCaps="false"
                        android:textColor="@color/pawty_text_secondary"
                        android:backgroundTint="@color/pawty_teal"
                        android:fontFamily="@font/marcellus"
                        app:cornerRadius="12dp"
                        app:strokeColor="@color/pawty_dark_blue"
                        app:strokeWidth="2dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/petEditDone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/done"
                        android:textColor="@color/pawty_text_secondary"
                        android:textAllCaps="false"
                        android:layout_marginStart="8dp"
                        android:backgroundTint="@color/pawty_teal"
                        android:fontFamily="@font/marcellus"
                        app:cornerRadius="12dp"
                        app:strokeColor="@color/pawty_dark_blue"
                        app:strokeWidth="2dp"/>
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>