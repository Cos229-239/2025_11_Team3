<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pawty_yellow">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_pawty_logo"
            android:contentDescription="@string/app_name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/panel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="@color/pawty_cream"
            app:cardCornerRadius="16dp"
            app:layout_constraintTop_toBottomOf="@id/logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:fontFamily="@font/marcellus">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/pawty_people_title"
                    android:textAlignment="center"
                    android:textColor="@color/pawty_text_secondary"
                    android:textSize="22sp"
                    android:paddingBottom="8dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:boxBackgroundMode="filled"
                    app:boxCornerRadiusTopStart="14dp"
                    app:boxCornerRadiusTopEnd="14dp"
                    app:boxCornerRadiusBottomStart="14dp"
                    app:boxCornerRadiusBottomEnd="14dp"
                    app:boxBackgroundColor="@color/pawty_teal"
                    app:boxStrokeColor="@android:color/transparent"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    android:hint="@string/hint_first_name">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:background="@null"
                        android:textColor="@color/pawty_text_secondary"
                        android:textColorHint="@color/pawty_text_secondary"
                        android:fontFamily="@font/marcellus"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:boxBackgroundMode="filled"
                    app:boxCornerRadiusTopStart="14dp"
                    app:boxCornerRadiusTopEnd="14dp"
                    app:boxCornerRadiusBottomStart="14dp"
                    app:boxCornerRadiusBottomEnd="14dp"
                    app:boxBackgroundColor="@color/pawty_teal"
                    app:boxStrokeColor="@android:color/transparent"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    android:hint="@string/hint_last_name">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etLastName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:background="@null"
                        android:textColor="@color/pawty_text_secondary"
                        android:textColorHint="@color/pawty_text_secondary"
                        android:fontFamily="@font/marcellus"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundMode="filled"
                    app:boxCornerRadiusTopStart="14dp"
                    app:boxCornerRadiusTopEnd="14dp"
                    app:boxCornerRadiusBottomStart="14dp"
                    app:boxCornerRadiusBottomEnd="14dp"
                    app:boxBackgroundColor="@color/pawty_teal"
                    app:boxStrokeColor="@android:color/transparent"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    android:hint="@string/hint_username"
                    android:fontFamily="@font/marcellus"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etUsername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:background="@null"
                        android:textColor="@color/pawty_text_secondary"
                        android:textColorHint="@color/pawty_text_secondary"
                        android:fontFamily="@font/marcellus"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundMode="filled"
                    app:boxCornerRadiusTopStart="14dp"
                    app:boxCornerRadiusTopEnd="14dp"
                    app:boxCornerRadiusBottomStart="14dp"
                    app:boxCornerRadiusBottomEnd="14dp"
                    app:boxBackgroundColor="@color/pawty_teal"
                    app:boxStrokeColor="@android:color/transparent"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    android:hint="@string/hint_password_create"
                    android:fontFamily="@font/marcellus"
                    android:layout_marginTop="10dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:background="@null"
                        android:textColor="@color/pawty_text_secondary"
                        android:textColorHint="@color/pawty_text_secondary"
                        android:fontFamily="@font/marcellus"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundMode="filled"
                    app:boxCornerRadiusTopStart="14dp"
                    app:boxCornerRadiusTopEnd="14dp"
                    app:boxCornerRadiusBottomStart="14dp"
                    app:boxCornerRadiusBottomEnd="14dp"
                    app:boxBackgroundColor="@color/pawty_teal"
                    app:boxStrokeColor="@android:color/transparent"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    android:hint="@string/hint_valid_email"
                    android:layout_marginTop="10dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:background="@null"
                        android:textColor="@color/pawty_text_secondary"
                        android:textColorHint="@color/pawty_text_secondary"
                        android:fontFamily="@font/marcellus"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundMode="filled"
                    app:boxCornerRadiusTopStart="14dp"
                    app:boxCornerRadiusTopEnd="14dp"
                    app:boxCornerRadiusBottomStart="14dp"
                    app:boxCornerRadiusBottomEnd="14dp"
                    app:boxBackgroundColor="@color/pawty_teal"
                    app:boxStrokeColor="@android:color/transparent"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    android:hint="@string/hint_phone"
                    android:layout_marginTop="10dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:background="@null"
                        android:textColor="@color/pawty_text_secondary"
                        android:textColorHint="@color/pawty_text_secondary"
                        android:fontFamily="@font/marcellus"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundMode="filled"
                    app:boxCornerRadiusTopStart="14dp"
                    app:boxCornerRadiusTopEnd="14dp"
                    app:boxCornerRadiusBottomStart="14dp"
                    app:boxCornerRadiusBottomEnd="14dp"
                    app:boxBackgroundColor="@color/pawty_teal"
                    app:boxStrokeColor="@android:color/transparent"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    android:hint="@string/hint_location"
                    android:layout_marginTop="10dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPostalAddress"
                        android:background="@null"
                        android:textColor="@color/pawty_text_secondary"
                        android:textColorHint="@color/pawty_text_secondary"
                        android:fontFamily="@font/marcellus"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_upload_profile"
                    android:textColor="@color/pawty_text_secondary"
                    android:fontFamily="@font/marcellus"
                    android:textSize="14sp"
                    android:layout_marginTop="16dp" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/zoneUploadProfile"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginTop="8dp"
                    app:cardBackgroundColor="@color/pawty_teal"
                    app:cardCornerRadius="14dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/ivProfilePreview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@android:drawable/ic_menu_camera"
                        android:contentDescription="@string/btn_upload_profile" />
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/upload_info_header"
                    android:textColor="@color/pawty_text_secondary"
                    android:textSize="14sp"
                    android:fontFamily="@font/marcellus"
                    android:layout_marginTop="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_upload_id_front"
                    android:textColor="@color/pawty_text_secondary"
                    android:textSize="14sp"
                    android:fontFamily="@font/marcellus"
                    android:layout_marginTop="16dp" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/zoneUploadIdFront"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="8dp"
                    app:cardBackgroundColor="@color/pawty_teal"
                    app:cardCornerRadius="14dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/ivIdFrontPreview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@android:drawable/ic_menu_camera"
                        android:contentDescription="@string/btn_upload_id_front" />
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_upload_id_back"
                    android:textColor="@color/pawty_text_secondary"
                    android:textSize="14sp"
                    android:fontFamily="@font/marcellus"
                    android:layout_marginTop="16dp" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/zoneUploadIdBack"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="8dp"
                    app:cardBackgroundColor="@color/pawty_teal"
                    app:cardCornerRadius="14dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/ivIdBackPreview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@android:drawable/ic_menu_camera"
                        android:contentDescription="@string/btn_upload_id_back" />
                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnBack"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/back"
                        android:textAllCaps="false"
                        android:textColor="@color/pawty_text_secondary"
                        android:backgroundTint="@color/pawty_teal"
                        android:fontFamily="@font/marcellus"
                        app:cornerRadius="12dp"
                        app:strokeColor="@color/pawty_dark_blue"
                        app:strokeWidth="2dp"
                        android:padding="12dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnNext"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/next"
                        android:textAllCaps="false"
                        android:textColor="@color/pawty_text_secondary"
                        android:backgroundTint="@color/pawty_teal"
                        android:fontFamily="@font/marcellus"
                        app:cornerRadius="12dp"
                        app:strokeColor="@color/pawty_dark_blue"
                        app:strokeWidth="2dp"
                        android:layout_marginStart="8dp"
                        android:padding="12dp" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <Space
            android:layout_width="1dp"
            android:layout_height="24dp"
            app:layout_constraintTop_toBottomOf="@id/panel"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>