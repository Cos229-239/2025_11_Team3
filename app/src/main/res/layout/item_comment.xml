<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="12dp"
    android:paddingVertical="4dp">

    <!-- Author name -->
    <TextView
        android:id="@+id/tvCommentAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/pawty_text_secondary"
        android:textSize="14sp"
        tools:text="Skye" />

    <!-- Comment text -->
    <TextView
        android:id="@+id/tvCommentText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textColor="@color/pawty_text_secondary"
        android:textSize="14sp"
        tools:text="This is a comment from Skye ðŸ¶" />

    <!-- Actions row: like, like count, reply -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btnLikeComment"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_like"
            android:contentDescription="@string/cd_like_comment" />

        <TextView
            android:id="@+id/tvLikeCountComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textColor="@color/pawty_text_secondary"
            android:textSize="12sp"
            tools:text="0" />

        <TextView
            android:id="@+id/btnReply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Reply"
            android:textAllCaps="false"
            android:textColor="@color/pawty_text_secondary"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>
