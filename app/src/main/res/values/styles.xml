<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PawtyNavButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>

        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/marcellus</item>
        <item name="android:textColor">@color/pawty_text_third</item>

        <item name="android:gravity">center</item>
        <item name="iconPadding">4dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>

        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/pawty_text_secondary</item>
    </style>

    <style name="PawtyRoundFab" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="TextAppearance.Pawty.Chip" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:fontFamily">@font/marcellus</item>
        <item name="fontFamily">@font/marcellus</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/pawty_text_secondary</item>
    </style>


    <style name="PawtyFilterChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textAppearance">@style/TextAppearance.Pawty.Chip</item>
        <item name="chipBackgroundColor">@color/pawty_teal</item>
        <item name="chipMinHeight">36dp</item>
        <item name="chipCornerRadius">18dp</item>
        <item name="chipStartPadding">14dp</item>
        <item name="chipEndPadding">14dp</item>
    </style>
</resources>