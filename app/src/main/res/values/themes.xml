<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.PawtyTime" parent="Theme.Material3.DayNight.NoActionBar">
    <item name="android:windowBackground">@color/pawty_yellow</item>
    <item name="android:forceDarkAllowed">false</item>
        <item name="colorPrimary">@color/pawty_dark_blue</item>
        <item name="colorControlActivated">@color/pawty_dark_blue</item>
        <item name="colorOnPrimary">@android:color/white</item>
    </style>
    
    <style name="CalendarDayOfWeek">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/date_text_color_selector</item>
    </style>

</resources>